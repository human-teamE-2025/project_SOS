<script>
document.addEventListener("DOMContentLoaded", function() {
    const columns = document.querySelectorAll('.column');
    const buttons = document.querySelectorAll('.toggle-btn');

    // 버튼 클릭 시 해당 열의 설명 펼치기 및 접기
    buttons.forEach((button, index) => {
        button.addEventListener('click', function(event) {
            toggleDescription(index);
            event.stopPropagation(); // 클릭 이벤트가 열의 클릭 이벤트까지 전달되지 않도록 함
        });
    });

    // 설명 펼치기 및 접기
    function toggleDescription(index) {
        const column = columns[index];
        const description = column.querySelector('.description');

        // 설명 토글
        description.classList.toggle('show');
        column.classList.toggle('selected');
        buttons[index].classList.toggle('open');

        // 열의 높이 조정
        if (description.classList.contains('show')) {
            column.style.height = 'auto'; // 펼쳐지면 내용만큼 늘어남
        } else {
            column.style.minHeight = '20px'; // 접혀지면 기본 높이
        }
    }
    
    toggleDescription(3); // 2번째 버튼 클릭한 효과 발생 (인덱스 1)

});
</script>
